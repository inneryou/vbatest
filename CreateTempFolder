'/**
'* ダウンロードフォルダにtempフォルダを作成する
'* @author
'*
Public Sub CreatetempFolderPath()
Dim tempFolderPath As String
Dim objShell As Object

    Set objShell = CreateObject("WScript.Shell")
    
    tempFolderPath = objShell.SpecialFolders("MyDocuments") & "\..\Downloads\temp"
    Debug.Print tempFolderPath
    
    If Dir(tempFolderPath, vbDirectory) = "" Then
        MkDir tempFolderPath
    End If
    
    Set objShell = Nothing
End Sub

'/**
'* ダウンロードフォルダのtempフォルダを削除する
'* @author
'*
Public Sub DeletetempFolderPath()
Dim tempFolderPath As String
Dim objShell As Object
Dim objFSO As Object

    Set objShell = CreateObject("WScript.Shell")
    Set objFSO = CreateObject("Scripting.FileSystemObject")
    
    tempFolderPath = objShell.SpecialFolders("MyDocuments") & "\..\Downloads\temp"
    Debug.Print tempFolderPath
    
    If Dir(tempFolderPath, vbDirectory) <> "" Then
        objFSO.DeleteFolder tempFolderPath
    End If
    
    Set objShell = Nothing
    Set objFSO = Nothing
    
    Debug.Print "完了"
    
End Sub
